<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smartwatch">

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:name=".Until.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartWatch"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activity.LienHe" />
        <activity android:name=".Activity.DangKy" />
        <activity android:name=".Activity.DangNhap" />
        <activity android:name=".Activity.DangKyOTP" />
        <activity android:name=".Activity.XacNhanOTP" />
        <activity android:name=".Activity.DSDongHoActivity" />
        <activity android:name=".Activity.DSMatKinhActivity" />
        <activity android:name=".Activity.DSPhuKienActivity" />
        <activity android:name=".Activity.ChiTietSanPhamActivity" />
        <activity android:name=".Activity.GioHangActivity" />
        <activity android:name=".Activity.ThongTinKHActivity" />
        <activity android:name=".Activity.DonHangActivity" />
        <activity android:name=".Activity.DoiMatKhauActivity" />
        <activity android:name=".Activity.CTDonHangActivity" />
        <activity android:name=".Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>